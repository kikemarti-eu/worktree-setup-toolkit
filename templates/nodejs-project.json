{
  "project_type": "nodejs",
  "name": "Node.js Project Template", 
  "description": "Modern Node.js development environment with npm/yarn support",
  "version": "1.0.0",
  
  "worktree_structure": {
    "main": {
      "description": "Main production branch",
      "protected": true
    },
    "develop": {
      "description": "Development integration branch",
      "protected": false
    },
    "feature/": {
      "description": "Feature development branches",
      "pattern": "feature/*",
      "auto_create": true
    },
    "hotfix/": {
      "description": "Production hotfix branches", 
      "pattern": "hotfix/*",
      "auto_create": true
    }
  },
  
  "build_targets": {
    "development": {
      "command": "npm run dev",
      "description": "Development server with hot reload"
    },
    "production": {
      "command": "npm run build",
      "output_path": "dist/",
      "description": "Production build"
    },
    "test": {
      "command": "npm test",
      "description": "Run test suite"
    }
  },
  
  "package_managers": {
    "npm": {
      "install": "npm install",
      "update": "npm update",
      "audit": "npm audit"
    },
    "yarn": {
      "install": "yarn install",
      "update": "yarn upgrade", 
      "audit": "yarn audit"
    },
    "pnpm": {
      "install": "pnpm install",
      "update": "pnpm update",
      "audit": "pnpm audit"
    }
  },
  
  "development_tools": {
    "start": "npm start",
    "dev": "npm run dev", 
    "test": "npm test",
    "lint": "npm run lint",
    "format": "npm run format",
    "clean": "rm -rf node_modules dist"
  },
  
  "git_hooks": {
    "pre-commit": {
      "enabled": true,
      "commands": [
        "npm run lint",
        "npm run format",
        "npm test"
      ]
    },
    "commit-msg": {
      "enabled": true,
      "validate_conventional_commits": true
    },
    "post-checkout": {
      "enabled": true,
      "commands": [
        "npm install"
      ]
    }
  },
  
  "ignore_patterns": [
    "node_modules/",
    "dist/",
    "build/",
    ".env.local",
    ".env.*.local",
    "npm-debug.log*",
    "yarn-debug.log*",
    "yarn-error.log*"
  ],
  
  "quality_checks": {
    "eslint": {
      "command": "npm run lint",
      "required": true
    },
    "prettier": {
      "command": "npm run format:check", 
      "required": true
    },
    "unit_tests": {
      "command": "npm test",
      "required": true
    },
    "type_check": {
      "command": "npm run type-check",
      "required": false
    }
  },
  
  "environment": {
    "node_version": ">=16.0.0",
    "npm_version": ">=8.0.0"
  },
  
  "common_scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "webpack --mode production",
    "test": "jest",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/"
  }
} 